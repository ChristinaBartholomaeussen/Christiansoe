@using Blazorise
@inherits LayoutComponentBase

<main>
    <NavMenu/>
    <NavImage PageType="@PageType"/>
    
    <div class="container">
        @Body
    </div>
</main>

@code{
    
    [Parameter]
    public Type PageType { get; set; }
    
     protected override void OnParametersSet()
     {
         if (Body != null) PageType = (Body.Target as RouteView)?.RouteData.PageType;
     }
  }
